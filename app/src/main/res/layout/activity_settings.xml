<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="group4.programmingproject1.Settings"
    android:background="#3333ff">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#00CCCC"
            android:minHeight="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Text Message"
                android:id="@+id/textView"
                android:layout_weight="3"
                android:layout_column="2"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingStart="6dp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:layout_weight="1"
                android:layout_column="3"
                android:checked="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="4dp">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00CCCC"
            android:minHeight="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Email"
                android:id="@+id/textView2"
                android:layout_weight="3"
                android:layout_column="2"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:paddingStart="6dp"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:layout_weight="1"
                android:layout_column="3"
                android:checked="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="4dp">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00CCCC"
            android:minHeight="40dp"
            android:gravity="center_vertical">

            <TextView
                android:text="Call Emergency Number"
                android:id="@+id/textView3"
                android:layout_weight="3"
                android:layout_column="2"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:paddingStart="6dp"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:layout_weight="1"
                android:layout_column="3"
                android:checked="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="4dp">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00CCCC"
            android:minHeight="40dp"
            android:gravity="center_vertical">

            <TextView
                android:text="Record Sound"
                android:id="@+id/textView8"
                android:layout_weight="3"
                android:layout_column="2"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:paddingStart="6dp"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton6"
                android:layout_weight="1"
                android:layout_column="3"
                android:checked="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="4dp">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00CCCC"
            android:minHeight="40dp"
            android:gravity="center_vertical">

            <TextView
                android:text="Record Video"
                android:id="@+id/textView5"
                android:layout_weight="3"
                android:layout_column="2"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:paddingStart="6dp"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton5"
                android:layout_weight="1"
                android:layout_column="3"
                android:checked="false" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="1dp">

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CCCCCC"
            android:minHeight="40dp"
            android:gravity="center_vertical">
            >

            <Switch
                android:id="@+id/switch1"
                android:layout_weight="2"
                android:layout_column="2"
                android:checked="false"
                android:text="Front Camera"
                android:textStyle="bold"
                android:paddingEnd="8dp"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Face Camera"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:layout_column="3"
                android:textStyle="bold"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="4dp">

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#00CCCC"
            android:minHeight="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Location Maps/GPS"
                android:id="@+id/textView4"
                android:layout_weight="3"
                android:layout_column="2"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:paddingStart="6dp"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4"
                android:layout_weight="1"
                android:layout_column="3"
                android:checked="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="10dp">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4388CC">

            <TextView
                android:text="Contact for Emergency"
                android:id="@+id/textView9"
                android:layout_column="2"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:paddingStart="6dp"
                android:minHeight="120dp"
                android:gravity="center_vertical"
                android:textStyle="bold"/>

        </TableRow>

    </TableLayout>
<!--
</RelativeLayout>
-->
</ScrollView>